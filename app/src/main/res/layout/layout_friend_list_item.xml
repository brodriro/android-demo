<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="4dp"
    app:cardElevation="4dp"
    android:layout_margin="4dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="4dp"
        android:gravity="center_vertical">
        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/iv_friends_image"
            android:layout_width="@dimen/friends_image_dimen"
            android:layout_height="@dimen/friends_image_dimen"
            android:src="@color/colorPrimary"/>
        <TextView
            android:id="@+id/tv_friend_fullname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/friend_item_fullname"
            android:textColor="@color/colorText"
            android:textSize="@dimen/friends_item_name_textsize"
            />
    </LinearLayout>
</androidx.cardview.widget.CardView>
